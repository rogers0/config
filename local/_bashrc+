
alias auu='apt update && apt upgrade'
alias iwlist='iwlist wlan0 scan |less -p ESSID'
alias netconsole_ip='ip a add 192.168.11.1/24 dev eth0'

alias serial='screen /dev/ttyUSB0 115200'
alias du='du -h --max-depth=1'
alias rsyncplain='rsync -rltDv'
alias netconsole='nc -l -u -p 6666 | tee ~/netconsole.log' # netconsole will send to 192.168.1.100:6666 # ip a add 192.168.1.100/24 dev eth0
alias 7='7z a -t7z -m0=lzma -mx=9 -mfb=64 -md=32m'

alias dquilt="quilt --quiltrc=${HOME}/.quiltrc-dpkg"
alias reapply='dquilt pop -a; while dquilt push; do dquilt refresh; done'
complete -F _quilt_completion $_quilt_complete_opt dquilt

alias amendcommit="GIT_COMMITTER_DATE=\$(git show --pretty=fuller|sed -n '5{p;q}'|cut -d: -f2-) git commit --amend --no-edit"
alias amendreset="GIT_COMMITTER_DATE=\$(git show --pretty=fuller|sed -n '3{p;q}'|cut -d: -f2-) git commit --amend --no-edit"
alias resetgit='git clean -fdx; git reset --hard'
alias gbpnew='gbp buildpackage -us -uc --git-ignore-branch --git-compression=xz'
alias gbpp='gbp buildpackage -us -uc --git-ignore-branch --git-pristine-tar'
alias gpb='gbp buildpackage --git-ignore-branch --git-pristine-tar --git-pbuilder --git-export-dir=../build-area'
alias gpbupdate='git-pbuilder update --override-config'

alias getkey='gpg --recv-keys 0x6C6ACD6417B3ACB1'
alias bpostretch='dch --bpo -D stretch-backports ""; git add debian/changelog; git commit -m "Rebuild as $(dpkg-parsechangelog -SVersion) for stretch-backports"'
alias bposloppy='dch -D jessie-backports-sloppy "Rebuild for jessie-backports-sloppy."; git add debian/changelog; git commit -m "Rebuild as $(dpkg-parsechangelog -SVersion) for jessie-backports-sloppy"'
alias bpostretchteam='dch --bpo -D stretch-backports "Team upload."; git add debian/changelog; git commit -m "Rebuild as $(dpkg-parsechangelog -SVersion) for stretch-backports"'
alias bposloppyteam='dch --team -D jessie-backports "Rebuild for jessie-backports-sloppy."; git add debian/changelog; git commit -m "Rebuild as $(dpkg-parsechangelog -SVersion) for jessie-backports-sloppy"'

